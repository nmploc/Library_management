<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="BooksPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="620.0" prefWidth="1200.0" style="-fx-background-color: white;" stylesheets="@../CSS/BaseScene.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.BooksController">
    <children>
        <!-- Thanh điều khiển phía trên -->
        <AnchorPane prefHeight="40.0" prefWidth="1200.0" style="-fx-background-color: #d12345;">
            <HBox alignment="CENTER" spacing="10">
                <Label text="Books" styleClass="titleLabel" />
                <Button fx:id="addBookButton" text="Add Book" onAction="#handleAddBook"
                        style="-fx-font-family: 'Montserrat'; -fx-text-fill: white; -fx-background-color: #3b5998; -fx-font-weight: bold; -fx-cursor: hand; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" />
            </HBox>
        </AnchorPane>

        <!-- Khu vực làm việc chính -->
        <VBox spacing="10" AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <TableView fx:id="booksTable">
                <!-- Định nghĩa cột cho bảng sách -->
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" />
                    <TableColumn fx:id="titleColumn" text="Title" />
                    <TableColumn fx:id="authorColumn" text="Author" />
                </columns>
            </TableView>

            <HBox spacing="20" alignment="CENTER">
                <!-- Nút Edit -->
                <Button fx:id="editBookButton" text="Edit" onAction="#handleEditBook"
                        style="-fx-font-family: 'Montserrat'; -fx-text-fill: white; -fx-background-color: #3b5998; -fx-font-weight: bold; -fx-cursor: hand; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" />

                <!-- Nút Delete -->
                <Button fx:id="deleteBookButton" text="Delete" onAction="#handleDeleteBook"
                        style="-fx-font-family: 'Montserrat'; -fx-text-fill: white; -fx-background-color: #3b5998; -fx-font-weight: bold; -fx-cursor: hand; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
